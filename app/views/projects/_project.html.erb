<li 
  class="list-group-item dropdown" 
  id="<%= "project_#{project.id}" %>" 
  data-action="click->project#select"
  data-chart-target="projects"
  data-project-target="projects"
  data-project-id-param="<%= project.id %>"
  data-single-project-id-value="<%= project.id %>"
  data-project-name-param="<%= project.name %>"
  data-project-voters-param="<%= project.voter_uuids %>"
  data-project-votes-value="<%= project.votes_by_voter %>"
  data-project-avg-effort-score-param="<%= project.avg_effort_score %>"
  data-project-avg-impact-score-param="<%= project.avg_impact_score %>"
  data-controller="toggle-form single-project"
  >
  <div class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-3 py-2 text-sm font-medium rounded-md">
    <span class="truncate"> <%= project.name %></span>
    <button data-toggle-form-target="text" class="bg-gray-100 text-gray-600 group-hover:bg-gray-200 ml-auto inline-block py-0.5 px-3 text-xs rounded-full" type="button" data-edit-project-id-param="<%= project.id %>" data-action="click->edit-project#selectProject">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
    </button>
  </div>
</li>
